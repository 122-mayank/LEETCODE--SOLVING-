class Solution {
public:
    int countBinarySubstrings(string s) {

        int size = s.size();

        int prev = 0;
        int curr = 1;

        int i = 1;
        int mini = INT_MAX;

        int result = 0;

        while (i < size) {

            if (s[i - 1] == s[i]) {
                curr = curr + 1;
            } else {
                mini = min(curr, prev);

                result = result + mini;
                prev = curr;
                curr = 1;
            }
            i++;
        }

        return result + min(prev , curr);
    }
};
