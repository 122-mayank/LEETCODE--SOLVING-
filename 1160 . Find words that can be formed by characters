class Solution {
public:
    int countCharacters(vector<string>& words, string chars) {

        vector<int> freq(26, 0);
        for (char c : chars) {
            freq[c - 'a']++;
        }
        
        int count = 0;
        
        for (string word : words) {
            vector<int> wordFreq(26, 0);
            for (char c : word) {
                wordFreq[c - 'a']++;
            }
            
            bool canForm = true;
            for (int i = 0; i < 26; i++) {
                if (wordFreq[i] > freq[i]) {
                    canForm = false;
                    break;
                }
            }
            
            if (canForm) {
                count += word.size();
            }
        }
        
        return count;
    }
};
